<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="xyz.b515.schedule.ui.MainActivity"
    tools:showIn="@layout/activity_main">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:gravity="center_horizontal"
            android:textSize="@dimen/table_textSize"
            android:layout_width="@dimen/table_width"
            android:layout_column="2"
            android:layout_row="1"
            android:text="@string/table_mon"
            android:textColor="@color/black" />

        <TextView
            android:gravity="center_horizontal"
            android:textSize="@dimen/table_textSize"
            android:layout_width="@dimen/table_width"
            android:layout_column="3"
            android:layout_row="1"
            android:text="@string/table_tue"
            android:textColor="@color/black" />

        <TextView
            android:gravity="center_horizontal"
            android:textSize="@dimen/table_textSize"
            android:layout_width="@dimen/table_width"
            android:layout_column="4"
            android:layout_row="1"
            android:text="@string/table_wed"
            android:textColor="@color/black" />

        <TextView
            android:layout_width="@dimen/table_width"
            android:layout_column="5"
            android:layout_row="1"
            android:gravity="center_horizontal"
            android:text="@string/table_thu"
            android:textColor="@color/black"
            android:textSize="@dimen/table_textSize" />

        <TextView
            android:gravity="center_horizontal"
            android:textSize="@dimen/table_textSize"
            android:layout_width="@dimen/table_width"
            android:layout_column="6"
            android:layout_row="1"
            android:text="@string/table_fri"
            android:textColor="@color/black" />

        <TextView
            android:gravity="center_horizontal"
            android:textSize="@dimen/table_textSize"
            android:layout_width="@dimen/table_width"
            android:layout_column="7"
            android:layout_row="1"
            android:text="@string/table_sat"
            android:textColor="@color/black" />

        <TextView
            android:gravity="center_horizontal"
            android:textSize="@dimen/table_textSize"
            android:layout_width="@dimen/table_width"
            android:layout_column="8"
            android:layout_row="1"
            android:text="@string/table_sun"
            android:textColor="@color/black" />

    </GridLayout>

</android.support.design.widget.CoordinatorLayout>
